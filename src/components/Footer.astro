---
import LinkedinButton from "../components/LinkedinButton.astro";
import EmailButton from "../components/EmailButton.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
import GithubButton from "../components/GithubButton.astro";
---

<div class="flex gap-8 my-12">
  <footer
    class="footer items-center justify-between p-4 bg-indigo-950 border border-slate-200 shadow-2xl text-white-content rounded-lg"
  >
    <aside class="items-center grid-flow-col">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-device-mobile-message"
        width="40"
        height="40"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M11 3h10v8h-3l-4 2v-2h-3z"></path><path
          d="M15 16v4a1 1 0 0 1 -1 1h-8a1 1 0 0 1 -1 -1v-14a1 1 0 0 1 1 -1h2"
        ></path><path d="M10 18v.01"></path></svg>
      <h3>Contacto</h3>
    </aside>
    <nav class="flex gap-4 items-center ml-12 md:ml-0">
      <LinkedinButton />
      <EmailButton />
      <WhatsAppButton />
      <GithubButton />
    </nav>
  </footer>
</div>
